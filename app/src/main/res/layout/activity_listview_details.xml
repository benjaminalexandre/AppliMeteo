<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/activity_listview_cell_img"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"

        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_listview_details_periode"
            android:layout_weight="0.90"
            android:textSize="18sp"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/activity_listview_details">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="107dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_temp"
                    android:id="@+id/imageView" />

                <TextView android:id="@+id/activity_listview_details_temp"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textSize="60px"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="107dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_navigation"
                    android:id="@+id/imageView4" />

                <TextView android:id="@+id/activity_listview_details_vent"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textSize="45px"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_umbrella"
                    android:id="@+id/imageView5" />

                <TextView android:id="@+id/activity_listview_details_prec"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textSize="45px"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>